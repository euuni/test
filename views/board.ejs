<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/css/board.css"/>
    <title>Board</title>
    <style>
      .floating-btn {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #89CFF0;
        color: white;
        border: none;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        font-size: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        z-index: 1000;
      }
    </style>
  </head>
  <div
  class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm"
>
<body class="bg-light">
    <a class="my-0 mr-md-auto font-weight-normal p-0 text-dark" href="/" style="font-size: 1rem;"><img
      class="mb-4"
      src="/public/css/home.png"
      alt=""
      width="60"
      height=""
      /></a>
      <%- include('nav.html') %>
      <a href="/login">
    <button class="btn btn-outline-primary" type="button">로그인</button>
  </a>
</div>
    </div>
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <div class="container mt-4">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">글 번호</th>
            <th scope="col">제목</th>
            <th scope="col">작성자</th>
            <th scope="col">날짜</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < posts.length; i++) { %>
          <tr>
            <th scope="row"><%= posts[i]._id %></th>
            <td><a href="/board/detail/<%= posts[i]._id %>"><%= posts[i].제목 %></a></td>
            <td><%= posts[i].작성자 %></td>
            <td><%= posts[i].날짜 %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Floating Button -->
    <button type="button" class="floating-btn" data-toggle="modal" data-target="#postModal">
      +
    </button>

    <!-- Modal Form -->
    <div class="modal fade" id="postModal" tabindex="-1" role="dialog" aria-labelledby="postModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="postModalLabel">새 글 작성</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/board/new" method="POST">
              <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" name="title" required />
              </div>
              <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" class="form-control" id="author" name="author" required />
              </div>
              <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" id="content" name="content" rows="5" required></textarea>
              </div>
              <button type="submit" class="btn btn-primary">작성 완료</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
  </body>
</html>
